<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ReportMapper">
	<!-- id는 마음대로 작성 prarameter는 실제DTO클래스 -->

	<!-- 모든 보고서 리스트 보기 -->
	<select id="ReportListAll" parameterType="ReportDTO" resultType="ReportDTO">
		SELECT *
		FROM REPORT_TB
		ORDER BY REPORT_NUM
	</select>
	<!-- 특정 지표의 보고서 리스트 보기 -->
	<select id="ReportListIndc" parameterType="ReportDTO" resultType="ReportDTO">
		<![CDATA[
		SELECT * 
		FROM(
			SELECT *
			FROM REPORT_TB
			WHERE INDICATORS_NUM = #{INDICATORS_NUM}
			ORDER BY EXTRACT(YEAR FROM RECORD_DATE) DESC
			)
		WHERE ROWNUM <= 3
		]]>
	</select>

</mapper>